<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blackg"
    android:layout_height="match_parent"
    tools:context=".ui.MainScreenActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textColor="@color/colornewAccent"
        android:background="#00FFFFFF"
        android:text="LAPO"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias=".05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/deepager"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/deepager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".5" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
       app:layout_constraintHorizontal_bias=".2"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/deepager"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/lv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_home_24"
            android:background="#00FFFFFF"/>
        <ImageButton
            android:id="@+id/lv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/black_monetization_on_24"
            android:background="#00FFFFFF"/>
        <ImageButton
            android:id="@+id/lv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/black_settings_24"
            android:background="#00FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="25dp"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deepager"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_chainStyle="packed">

        <ImageView
            android:id="@+id/img1"
           android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two"
            android:background="#00FFFFFF"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/one"
            android:background="#00FFFFFF"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/one"
            android:background="#00FFFFFF"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>